---
import Header from "../components/Header.astro";

const {
  title = "Daniel Osório",
  description = "...",
    image = "/images/daniel_osorio.png",
} = Astro.props;

const fullTitle = `${title} | Portfolio`;
const canonicalUrl = Astro.url.origin + Astro.url.pathname;
const base = import.meta.env.BASE_URL;
const basePath = base.endsWith("/") ? base : `${base}/`;
const withBase = (path: string) => `${basePath}${path.replace(/^\/+/, "")}`;
const resolvedImage = image.startsWith("http") ? image : withBase(image);
const imageUrl = new URL(resolvedImage, Astro.url.origin).toString();
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />

        <title>{fullTitle}</title>
        <meta name="description" content={description} />

        <!-- Canonical -->
        <link rel="canonical" href={canonicalUrl} />

        <!-- Open Graph -->
        <meta property="og:type" content="website" />
        <meta property="og:title" content={fullTitle} />
        <meta property="og:description" content={description} />
        <meta property="og:url" content={canonicalUrl} />
        <meta property="og:image" content={imageUrl} />

        <!-- Twitter -->
        <meta name="twitter:card" content="summary" />
        <meta name="twitter:title" content={fullTitle} />
        <meta name="twitter:description" content={description} />
        <meta name="twitter:image" content={imageUrl} />
        <meta name="twitter:image:alt" content="Portrait of Daniel Osório" />

        <!-- Favicon -->
        <link rel="icon" href={withBase("/favicon/favicon.svg")} type="image/svg+xml" />
        <link rel="icon" href={withBase("/favicon/favicon-32.png")} sizes="32x32" type="image/png" />
        <link rel="icon" href={withBase("/favicon/favicon-16.png")} sizes="16x16" type="image/png" />

        <!-- Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Source+Serif+4:opsz,wght@8..60,400;600&display=swap"
            rel="stylesheet"
        />
    </head>
    <body class="min-h-screen bg-white font-sans text-slate-900">
        <div class="mx-auto max-w-3xl p-6">
            <Header />
            <slot />
        </div>
    </body>
</html>
